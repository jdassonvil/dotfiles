[user]
  name = Jerome Dassonville
  email = jerome.dassonville@datadoghq.com

[alias]
  co = checkout
  ci = commit -s
  ca = commit -s -a
  st = status -sb
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%Creset' --abbrev-commit
  wdiff = diff --word-diff
  unstash = stash pop
  uncommit = reset --soft HEAD^
  rmbranch = branch -d
  trash = reset --hard
  amend = commit --amend

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[http]
  postbuffer = 157286400
  sslverify = false

[push]
	default = current
